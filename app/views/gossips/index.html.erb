<p style="color: green"><%= notice %></p>

<% content_for :title, "Gossips" %>

<h1>Gossips</h1>

<div id="gossips">
  <% @gossips.each do |gossip| %>
    <%= render gossip %>

    <div style="margin: .5rem 0;">
      <%= render "like_button", gossip: gossip %>
    </div>

    <p>
      <%= link_to "Voir", gossip %>
      <% if logged_in? && current_user == gossip.user %>
        | <%= link_to "Ã‰diter", edit_gossip_path(gossip) %>
        | <%= button_to "Supprimer", gossip, method: :delete,
              form: { data: { turbo_confirm: "Supprimer ?" } } %>
      <% end %>
    </p>

    <hr>
  <% end %>
</div>

<% if logged_in? %>
  <%= link_to "New gossip", new_gossip_path %>
<% end %>
